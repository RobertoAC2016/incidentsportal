@model incidents.Models.login_request

<div class="row">
    <div class="col-12 text-center" style="color:red;">
        @ViewBag.Message
    </div>
</div>

<div class="row">
    <div class="col-md-3">&nbsp;</div>
    <div class="col-md-6">

        <div class="card">
            <div class="card-header">
                Login</b>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-12">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="username" class="control-label"></label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input asp-for="username" class="form-control" />
                                </div>
                                <span asp-validation-for="username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="password" class="control-label"></label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <i class="bi bi-three-dots"></i>
                                    </span>
                                    <input asp-for="password" class="form-control" type="password" />
                                </div>
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                            <div class="row">&nbsp;</div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6 text-center">
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-info">
                                            <i class="bi bi-caret-left"></i>
                                            Back
                                        </a>
                                    </div>
                                    <div class="col-6 text-center">
                                        <div class="btn btn-primary">
                                            <i class="bi bi-unlock"></i>
                                            <input type="submit" value="Login" class="text-white" style="border-top: 0px;border-right: 0px;border-bottom: 0px;border-left: 0px;background-color:transparent;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row">&nbsp;</div>


            </div>
        </div>

    </div>
    <div class="col-md-3">&nbsp;</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

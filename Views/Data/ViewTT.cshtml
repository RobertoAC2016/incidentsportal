@model incidents.Models.incident

<div>
    <h4>Ticket details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">Id</dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-layout-sidebar"></i>
                    </span>
                    @Html.DisplayFor(model => model.id)
                </div>
            </div>
        </dd>
        <dt class = "col-sm-3">From</dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-at"></i>
                    </span>
                    @Html.DisplayFor(model => model.from)
                </div>
            </div>
        </dd>
        <dt class = "col-sm-3">To</dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-at"></i>
                    </span>
                    @Html.DisplayFor(model => model.to)
                </div>
            </div>
        </dd>
        <dt class = "col-sm-3">Subject</dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-textarea-t"></i>
                    </span>
                    @Html.DisplayFor(model => model.subject)
                </div>
            </div>
        </dd>
        <dt class = "col-sm-3">Message
        </dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-card-text"></i>
                    </span>
                    @Html.DisplayFor(model => model.message)
                </div>
            </div>
        </dd>
        <dt class="col-sm-3">Importance</dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-exclamation-circle"></i>
                    </span>
                    @Html.DisplayFor(model => model.importance)
                </div>
            </div>
        </dd>
        <dt class = "col-sm-3">Date
        </dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-calendar"></i>
                    </span>
                    @Model.date.ToString("yyyy-MM-dd HH:mm")
                </div>
            </div>
        </dd>
        <dt class = "col-sm-3">Status
        </dt>
        <dd class="col-sm-7">
            <div class="form-group">
                <div class="input-group mb-3 align_middle_text">
                    <span class="input-group-text">
                        <i class="bi bi-clipboard-pulse"></i>
                    </span>
                    @Html.DisplayFor(model => model.status)
                </div>
            </div>
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-2">
        <div class="btn btn-info">
            <a href="@Url.ActionLink("Index", "Data")" class="text-white" style="text-decoration:none;">
                <i class="bi bi-arrow-left"></i>
            </a>
        </div>
    </div>
    <div class="col-8">
    </div>
    <div class="col-2">
        <div class="btn btn-primary">
            <a href="@Url.ActionLink("EditTicket", "Data", new {id= Model.id})" class="text-white" style="text-decoration:none;">
                <i class="bi bi-pencil-square"></i>
            </a>
        </div>
    </div>
</div>

<style>
    .align_middle_text{
        display:flex;
        align-items:center;
    }
</style>
@model IEnumerable<user_register>

<p>
    <div class="btn btn-primary">
        <a asp-action="Create" class="text-white" style="text-decoration:none;">
            <i class="bi bi-person-plus"></i>
            New user
        </a>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th>
                Login
            </th>
            <th>
                Department
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.roles)
            </td>
            <td>
                <div class="btn btn-secondary">
                    <a href="@Url.ActionLink("Edit", "Data", new {  id=item.id  })" class="text-white" style="text-decoration:none;">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </div>
                <div class="btn btn-info">
                    <a href="@Url.ActionLink("Details", "Data", new {  id=item.id  })" class="text-white" style="text-decoration:none;">
                        <i class="bi bi-journal-text"></i>
                    </a>
                </div>
                <div class="btn btn-danger">
                    <a href="@Url.ActionLink("Delete", "Data", new {  id=item.id  })" class="text-white" style="text-decoration:none;">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
                @*@Html.ActionLink("Edit", "Edit", "Data", new {  id=item.id  }, new { @class = "btn btn-secondary"})
                @Html.ActionLink("Details", "Details", "Data", new { id=item.id }, new { @class = "btn btn-info"})
                @Html.ActionLink("Delete", "Delete", "Data", new { id=item.id }, new { @class = "btn btn-danger"})*@
            </td>
        </tr>
}
    </tbody>
</table>
